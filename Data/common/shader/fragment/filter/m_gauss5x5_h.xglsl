uniform sampler2D tex;
uniform float disp;

varying vec2 mapping;

void main( void )
{
   vec4 color;
   color  = texture2D(tex, mapping - vec2(disp, 0.0));
   color += texture2D(tex, mapping + vec2(disp, 0.0));
   color *= (5.0/16.0); // 5/16 each, worth 10/16 of total.
   color += (6.0/16.0) * texture2D(tex, mapping);
   gl_FragColor = color;
}
