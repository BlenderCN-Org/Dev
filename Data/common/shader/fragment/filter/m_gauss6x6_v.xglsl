uniform sampler2D tex;
uniform float disp;

varying vec2 mapping;

void main( void )
{
   vec4 color;
   color  = texture2D(tex, mapping - vec2(0.0, disp));
   color += texture2D(tex, mapping + vec2(0.0, disp));
   color *= ( 6.0/32.0); // 6/32 each, worth 12/32 of total.
   color += (20.0/32.0) * texture2D(tex, mapping);
   gl_FragColor = color;
}
