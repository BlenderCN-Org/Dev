mapping{
   function( IN )
      local n = abs( IN.fn+vec3(0,0.01,0) )
      if n.x > n.y then
         if n.x > n.z then
            return IN.pos.zy
         else
            return IN.pos.xy
         end
      else
         if n.y > n.z then
            return IN.pos.xz
         else
            return IN.pos.xy
         end
      end
   end
}


